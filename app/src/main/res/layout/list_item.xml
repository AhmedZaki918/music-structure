<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/minHeight_listItem"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="@dimen/layout_width_artistPhoto"
        android:layout_height="@dimen/layout_height_artistPhoto" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ArtistName"
            style="@style/TextViews_List_Items"
            android:gravity="bottom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_ArtistName"
            tools:text="Elissa" />

        <TextView
            android:id="@+id/SongName"
            style="@style/TextViews_List_Items"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_Song"
            tools:text="Ana Magnoona" />

        <TextView
            android:id="@+id/Album"
            style="@style/TextViews_List_Items"
            android:gravity="top"
            android:textSize="@dimen/textSize_Song"
            tools:text="Album" />

    </LinearLayout>


    <ImageView
        android:id="@+id/MusicIcon_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_musicIcon"
        tools:src="@drawable/baseline_play_arrow_black_24" />


</LinearLayout>